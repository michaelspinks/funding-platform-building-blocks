{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "storageAccountName": {
      "type": "string",
      "metadata": {
        "description": "Name of the storage account the container belongs to"
      }
    },
    "shareName": {
      "type": "string",
      "metadata": {
        "description": "Name of the container"
      }
    },
    "shareQuota": {
      "type": "int",
      "defaultValue": 5120,
      "metadata": {
        "description": "The maximum size of the share, in gigabytes. Must be greater than 0, and less than or equal to 5TB (5120). For Large File Shares, the maximum size is 102400."
      }
    }
  },
  "variables": {
  },
  "resources": [
    {
      "name": "[concat(parameters('storageAccountName'), '/default/', parameters('shareName'))]",
      "type": "Microsoft.Storage/storageAccounts/fileServices/shares",
      "apiVersion": "2019-06-01",
      "properties": {
        "shareQuota": "[parameters('shareQuota')]"
      }
    }
  ],
  "outputs": {
  }
}
