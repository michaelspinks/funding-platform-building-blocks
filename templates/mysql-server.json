{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "serverName": {
            "type": "string",
            "metadata": {
                "description": "Name of the server to add firewall rules to"
            }
        },
        "serverAdminLogin": {
            "type": "string"
        },
        "serverAdminPassword": {
            "type": "securestring"
        },
        "databaseName": {
            "type": "string"
        },
        "version": {
            "type": "string",
            "defaultValue": "5.7",
            "allowedValues": [
                "5.6",
                "5.7",
                "8.0"
            ]
        },
        "backupRetentialDays": {
            "type": "int",
            "defaultValue": 7
        }
    },
    "resources": [
        {
            "name": "[parameters('serverName')]",
            "type": "Microsoft.DBforMySQL/servers",
            "apiVersion": "2017-12-01",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "B_Gen5_2",
                "tier": "Basic",
                "family": "Gen5"
            },
            "properties": {
                "administratorLogin": "[parameters('serverAdminLogin')]",
                "administratorLoginPassword": "[parameters('serverAdminPassword')]",
                "version": "[parameters('version')]",
                "sslEnforcement": "Enabled",
                "storageProfile": {
                    "backupRetentionDays": "[parameters('backupRetentialDays')]"
                },
                "createMode": "Default"
            },
            "resources": [
                {
                    "name": "[parameters('databaseName')]",
                    "type": "databases",
                    "apiVersion": "2017-12-01",
                    "properties": {
                    },
                    "dependsOn": [
                        "[parameters('serverName')]"
                    ]
                }
            ]
        }
    ]
}